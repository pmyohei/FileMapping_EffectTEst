<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mapping.filemapping">
    <!-- MediaStore.Images.Media.EXTERNAL_CONTENT_URI -->
    <!-- ※コード上でも「ActivityCompat.requestPermissions()」の処理が必要 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MapCommonData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_m"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_m_round"
        android:supportsRtl="true"
        android:theme="@style/Toolbar.NoActionBar">
        <activity
            android:name=".PictureGalleryActivity"
            android:exported="false" />
        <activity
            android:name=".PictureTrimmingActivity"
            android:exported="true" />
        <activity
            android:name=".PictureNodeSelectActivity_old"
            android:exported="true" />
        <activity
            android:name=".ColorPickerActivity"
            android:exported="true" /> <!-- Applicationの使用 -->
        <activity
            android:name=".MapEntryActivity"
            android:exported="true" />
        <activity
            android:name=".NodeEntryActivity"
            android:exported="true" /> <!-- アプリバー無効化 -->
        <activity
            android:name=".MapActivity"
            android:exported="true" />
        <activity
            android:name=".MapListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>